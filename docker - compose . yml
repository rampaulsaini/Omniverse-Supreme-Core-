version: '3.8'
services:
  frontend:
    build: ./frontend
    container_name: omniverse_frontend
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
    restart: unless-stopped

  backend:
    build: ./backend
    container_name: omniverse_backend
    ports:
      - "8000:8000"
    environment:
      - ENV=production
    depends_on:
      - frontend
    restart: unless-stopped
