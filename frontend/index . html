  <script>
    const api = "/api/chat"; // when backend proxied; otherwise replace with full url
    const messages = document.getElementById("messages");
    document.getElementById("send").onclick = async () => {
      const q = document.getElementById("q").value;
      if(!q) return;
      append("You: "+q);
      document.getElementById("q").value="";
      append("‚Ä¶thinking‚Ä¶");
      try{
        const res = await fetch(api, {method:"POST",headers:{"Content-Type":"application/json"}, body:JSON.stringify({message:q})});
        const data = await res.json();
        popLast(); // remove thinking
        append("Íô∞: "+(data.reply || data));
      }catch(e){
        popLast();
        append("Error contacting core.");
      }
    };
    function append(t){ const d=document.createElement("div"); d.textContent=t; messages.appendChild(d); messages.scrollTop=messages.scrollHeight;}
    function popLast(){ if(messages.lastChild) messages.removeChild(messages.lastChild); }
  </script>
