name: Manifest, Scan & Artifact

on:
  push:
    branches: [ main ]

jobs:
  build-scan:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.11'

      - name: Install deps & run tests
        run: |
          python -m pip install --upgrade pip
          pip install -r backend/requirements.txt
          # run tests if any
          # pytest backend/tests || true

      - name: Generate content manifest (sha256)
        run: |
          mkdir -p SIGNATURES
          find . -type f -name '*.html' -o -name '*.js' -o -name '*.py' | sort > SIGNATURES/filelist.txt
          while read f; do sha256sum "$f"; done < SIGNATURES/filelist.txt > SIGNATURES/manifest.sha256
      - name: Upload manifest
        uses: actions/upload-artifact@v4
        with:
          name: omniverse-manifest
          path: SIGNATURES/manifest.sha256
