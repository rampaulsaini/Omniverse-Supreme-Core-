name: Backend CI
on:
  push:
    paths:
      - 'backend/**'
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.11"
      - name: Lint & Install
        run: |
          cd backend
          pip install -r requirements.txt
      - name: Run tests (if any)
        run: echo "No tests configured"
