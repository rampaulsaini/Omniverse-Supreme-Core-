name: github-pages

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node (for build, optional)
        uses: actions/setup-node@v4
        with:
          node-version: '18'

      - name: Build (if any)
        run: |
          echo "No build step for static starter. Place build commands here if using a SSG."

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v4
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./   # root
